<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrangeDark"
    android:id="@+id/fragment_inventory">

    <LinearLayout
        android:id="@+id/comp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/item1Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_image_cable" />

            <TextView
                android:id="@+id/item1Nb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/item2Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_image_cable" />

            <TextView
                android:id="@+id/item2Nb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/item3Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_image_cable" />

            <TextView
                android:id="@+id/item3Nb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.25">

            <ImageView
                android:id="@+id/item4Img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:srcCompat="@mipmap/ic_image_cable" />

            <TextView
                android:id="@+id/item4Nb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/_0" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/SecPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/comp">

    <ProgressBar
        android:id="@+id/pgBarClick"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="256dp"
        android:layout_height="20dp"
        android:layout_above="@id/btnClicker"
        android:layout_centerHorizontal="true"/>


    <ListView
        android:id="@+id/listPersonalInventory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pgBarClick"
        android:divider="#000000"
        android:dividerHeight="1dp"
        android:foreground="@drawable/border"></ListView>


    <ImageButton
        android:id="@+id/btnClicker"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:contentDescription="@string/ClickButton"
        android:src="@mipmap/ic_image_iron_ore"/>
    </RelativeLayout>
</RelativeLayout>